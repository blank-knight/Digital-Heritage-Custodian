{
  "version": 2,
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "commands": [
      "cd frontend",
      "npm install",
      "npm run build"
    ],
    "outputDirectory": "frontend/dist"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "buildCommand": "true",
  "installCommand": "true",
  "devCommand": "true"
}